<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/icon_resource_person_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="7dp"
    android:layout_marginBottom="20dp"
    android:visibility="visible"
    android:clickable="true"
    android:focusable="true"
    android:background="#000000"
    android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/speakers"
            android:textSize="30dp"
            android:isScrollContainer="true"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:id="@+id/resource_person_heading"
            android:visibility="gone"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/resource_person_layout"
        android:weightSum="300"
        android:visibility="visible">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/resource_person_image"
            android:src="@drawable/dummy"
            android:layout_weight="50"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="250"
            android:layout_marginTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:textStyle="bold"
            android:textSize="23dp"
            android:textColor="@color/blue"
            android:id="@+id/resource_person_name"
            android:gravity="center_horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INSTITUTE/COMPANY"
            android:gravity="center_horizontal"
            android:textStyle="italic"
            android:autoLink="all"
            android:textSize="18dp"
            android:id="@+id/resource_person_company"
            />

        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>