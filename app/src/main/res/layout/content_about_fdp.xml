<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/layout_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homePageScroll"
        android:scrollbars="vertical">


    <android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/aboutFDPCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="6dp"
        card_view:contentPadding="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FACULTY DEVELOPMENT PROGRAM"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="19dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/fdp_heading"
                android:paddingBottom="4dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fdp_name_title"
                android:textStyle="italic"
                android:textColor="@color/blue"
                android:textSize="16dp"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:id="@+id/fdp_heading_title"
                />

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@color/blue"
                android:layout_marginBottom="15dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aboutFDPTextView"
                android:text="@string/aboutFDPContent"
                android:textColor="#000"
                android:scrollbars="vertical"
                android:isScrollContainer="true"
                android:textStyle="bold"
                android:typeface="sans"
                android:textSize="14dp"
                android:paddingBottom="20dp"
                android:justificationMode="inter_word"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TECHNICAL SPONSORS"
                android:textSize="19dp"
                android:id="@+id/sponsorsTextView"
                android:textColor="@color/blue"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/sponsers"
                android:id="@+id/sponsers_image"
                android:paddingBottom="40dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    </ScrollView>

</LinearLayout>
